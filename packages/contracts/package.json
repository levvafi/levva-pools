{
  "name": "@marginly/contracts",
  "version": "0.1.0",
  "description": "Marginly Contracts",
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile": "hardhat compile",
    "test": "UPDATE_SNAPSHOT=1 REPORT_GAS=true hardhat test ./test/*.spec.ts",
    "test:coverage": "UPDATE_SNAPSHOT=1 REPORT_GAS=true hardhat coverage  --testfiles './test/*.spec.ts'",
    "gas": "hardhat test ./test/gas-costs/*.spec.ts",
    "test:unit": "REPORT_GAS=true hardhat test ./test/*.spec.ts",
    "test:bench": "REPORT_GAS=true hardhat test ./test/benchmarks/*.bench.ts",
    "test:benchFP": "REPORT_GAS=true hardhat test ./test/benchmarks/FixedPoint.bench.ts",
    "lint:write": "prettier --write ./contracts",
    "docgen": "hardhat docgen"
  },
  "author": "EqLab",
  "devDependencies": {
    "@aave/core-v3": "1.17.2",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.5",
    "@nomicfoundation/hardhat-verify": "^1.0.1",
    "@openzeppelin/contracts": "^4.8.0",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/jest": "^29.2.5",
    "@types/mocha": "^10.0.1",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.3",
    "@uniswap/snapshot-gas-cost": "^1.0.0",
    "@marginly/router": "^0.1.0",
    "mocha-chai-jest-snapshot": "^1.1.4",
    "chai": "^4.3.7",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.6",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.9",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4",
    "solidity-docgen": "^0.6.0-beta.36",
    "dotenv": "^16.3.1"
  }
}
