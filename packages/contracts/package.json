{
  "name": "@marginly/contracts",
  "author": "EqLab",
  "version": "0.1.0",
  "description": "Marginly Contracts",
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile": "hardhat compile",
    "test": "UPDATE_SNAPSHOT=1 REPORT_GAS=true hardhat test ./test/*/*.spec.ts",
    "test:coverage": "UPDATE_SNAPSHOT=1 REPORT_GAS=true hardhat coverage  --testfiles './test/*/*.spec.ts'",
    "test:bench": "REPORT_GAS=true hardhat test ./test/benchmarks/*.bench.ts",
    "test:benchFP": "REPORT_GAS=true hardhat test ./test/benchmarks/FixedPoint.bench.ts",

    "test:int-pool": "MODE=INT-TEST-ETH hardhat test ./int-test/pool/suites/*.ts",
    "test:int-pool-parallel": "MODE=INT-TEST-ETH hardhat test --parallel ./int-test/pool/suites/*.ts",
    "test:int-eth": "MODE=INT-TEST-ETH hardhat test ./int-test/*/*.eth.spec.ts",
    "test:int-arb": "MODE=INT-TEST-ARB hardhat test ./int-test/*/*.arb.spec.ts",
    "test:int-sonic": "MODE=INT-TEST-SONIC hardhat test ./int-test/*/*.sonic.spec.ts",

    "lint:write": "prettier --write ./contracts ./test ./int-test ./deploy",
    "docgen": "hardhat docgen"
  },
  "devDependencies": {
    "@aave/core-v3": "1.19.3",
    "@chainlink/contracts": "~1.4.0",
    "@cryptoalgebra/v1.9-core": "^1.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.12",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.14",
    "@nomicfoundation/ignition-core": "^0.15.12",
    "@openzeppelin/contracts": "^5.3.0",
    "@pendle/core-v2": "^5.8.6",
    "@pythnetwork/pyth-sdk-solidity": "^4.1.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.2.0",
    "@types/jest": "^29.2.5",
    "@types/mocha": "^10.0.1",
    "@types/node": ">=24.0.0",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.3",
    "chai": "^4.2.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.14.3",
    "hardhat": "2.24.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.3.0",
    "mocha-chai-jest-snapshot": "^1.1.4",
    "optifat-snapshot-gas-cost": "1.1.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "solhint": "5.1.0",
    "solhint-plugin-prettier": "0.1.0",
    "solidity-coverage": "^0.8.2",
    "solidity-docgen": "^0.6.0-beta.36",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.0",
    "typescript": "^5.8.3"
  }
}
