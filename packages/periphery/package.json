{
  "name": "@marginly/periphery",
  "version": "0.1.0",
  "description": "Marginly periphery contracts",
  "license": "GPL-2.0-or-later",
  "files": [
    "artifacts",
    "contracts",
    "typechain-types"
  ],
  "scripts": {
    "compile": "hardhat compile --config ./hardhat-configs/hardhat.config.ts",
    "test": "UPDATE_SNAPSHOT=1 REPORT_GAS=true hardhat test ./test/*.spec.ts --config ./hardhat-configs/hardhat.config.ts",
    "test:coverage": "UPDATE_SNAPSHOT=1 REPORT_GAS=true hardhat coverage --testfiles './test/*.spec.ts'",
    "test:int-arb": "REPORT_GAS=true hardhat test --config ./hardhat-configs/arb-fork.config.ts ./test/int/**/*.arb.spec.ts",
    "test:int-eth": "REPORT_GAS=true hardhat test --config ./hardhat-configs/eth-fork.config.ts ./test/int/**/*.eth.spec.ts",
    "test:int-sonic": "REPORT_GAS=true hardhat test --config ./hardhat-configs/sonic-fork.config.ts ./test/int/**/*.sonic.spec.ts",
    "lint:write": "prettier --write ./contracts ./test",
    "docgen": "hardhat docgen"
  },
  "author": "EqLab",
  "devDependencies": {
    "@aave/core-v3": "^1.19.3",
    "@chainlink/contracts": "~1.4.0",
    "@cryptoalgebra/v1.9-core": "^1.0.0",
    "@marginly/contracts": "^0.1.0",
    "@marginly/router": "^0.1.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.14",
    "@openzeppelin/contracts": "^5.3.0",
    "@pendle/core-v2": "^5.8.6",
    "@pythnetwork/pyth-sdk-solidity": "^4.1.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "9.1.0",
    "@types/jest": "^29.2.5",
    "@types/mocha": "^10.0.1",
    "@types/node": ">=18.0.0",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.3",
    "chai": "^4.2.0",
    "ethers": "^6.14.3",
    "hardhat": "2.24.1",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^2.3.0",
    "mocha-chai-jest-snapshot": "^1.1.4",
    "optifat-snapshot-gas-cost": "1.1.0",
    "solhint": "5.1.0",
    "solhint-plugin-prettier": "0.1.0",
    "solidity-coverage": "^0.8.2",
    "solidity-docgen": "^0.6.0-beta.36",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^5.8.3"
  }
}
